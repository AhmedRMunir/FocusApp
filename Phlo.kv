#:kivy 2.0

Screen:

    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "                    Phlo√º"
        # halign: "center"
        
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

    MDNavigationLayout:

        x: toolbar.height

        WindowManager:
            id: window_manager
            LoginPage:
            HomePage:
            WorkPage:
            BreakPage:
            SummaryPage:
        

        MDNavigationDrawer:
            id: nav_drawer

            # type: "standard"
            opening_time: 0.4
            closing_time: 0.4

            ContentNavigationDrawer:
                screen_manager: window_manager
                nav_drawer: nav_drawer

                MDLabel:
                    text: "hello"

