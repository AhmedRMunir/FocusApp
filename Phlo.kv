<LoginPage@Screen>:
    name: "login"

    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 25
        padding: 25
        spacing: 25
        orientation: "vertical"
        radius: 10

        MDLabel:
            id: welcome_label
            text: "Welcome"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            id: user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            # color_mode: 'custom'
            line_color_focus: 1, 1, 1, 1

        MDTextField:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "Log In"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.login()
            on_release:
                app.root.ids["window_manager"].current = "home"

        MDRoundFlatButton:
            text: "Clear"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.clear()

        Widget:
            size_hint_y: None
            height: 0

<HomePage@MDScreen>:
    name: "home"

    work_increment: 4 * 60 * 60
    break_increment: 1 * 30 * 60

    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"

            Widget:
                size_hint_x: None
                width: 20
        
            MDLabel:
                text: "Work Until:"
                font_size: 20
                halign: 'center'
                size_hint_y: None
                # size_hint_x: None
                height: self.texture_size[1]
            
            MDLabel:
                id: work_time_picker
                text: "4:00:00"
                font_size: 20
                halign: 'center'
                size_hint_y: None
                size_hint_x: None
                height: self.texture_size[1]
            
            MDRoundFlatIconButton:
                icon: "timer-sand"
                isWork: True
                text: "Choose Time"
                font_size: 15
                halign: 'center'
                size_hint_y: None
                size_hint_x: None
                pos_hint: {"center_y": 0.1}
                on_release:
                    app.show_time_picker(self, work_time_picker.text)
            
            Widget:
                size_hint_x: None
                width: 20
        
        BoxLayout:
            orientation: "horizontal"

            Widget:
                size_hint_x: None
                width: 20
        
            MDLabel:
                text: "Break Time:"
                font_size: 20
                halign: 'center'
                size_hint_y: None
                # size_hint_x: None
                height: self.texture_size[1]
            
            MDLabel:
                id: break_time_picker
                text: "00:30:00"
                font_size: 20
                halign: 'center'
                size_hint_y: None
                size_hint_x: None
                height: self.texture_size[1]
            
            MDRoundFlatIconButton:
                icon: "timer-sand"
                isWork: False
                text: "Choose Time"
                font_size: 15
                halign: 'center'
                size_hint_y: None
                size_hint_x: None
                pos_hint: {"center_y": 0.1}
                on_release:
                    app.show_time_picker(self, break_time_picker.text)
            
            Widget:
                size_hint_x: None
                width: 20
        
        Widget:

        MDLabel:
            text: "Choose Task"
            font_size: 20
            halign: 'center'
            size_hint_y: None
            size_hint_x: 1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            height: self.texture_size[1]

        MDDropDownItem:
            id: dropdown_item
            text: "Item 0"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            current_item: "Item 0"
            on_release: app.menu.open()

        Widget:
                
        MDRoundFlatButton:
            text: "Start Work"
            font_size: 15
            halign: 'center'
            size_hint_y: None
            size_hint_x: None
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_release:
                app.root.ids["window_manager"].current = "work"
                app.root.ids["window_manager"].get_screen("home").increment_work_time()
                app.root.ids["window_manager"].get_screen("home").increment_break_time()
                app.start_stop_work_timer()
        Widget:

<WorkPage@Screen>:
    name: "work"
    work_timer_text: "00:00:00"
    work_total_time: 0

    BoxLayout:
        orientation: "vertical"

        Widget:

        MDLabel:
            id: work_timer
            text: root.work_timer_text
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        BoxLayout:
            orientation: "horizontal"

            Widget:

            MDLabel:
                text: "Hide/Show Timer"
                pos_hint: {"center_x": 0.5, "center_y": 0.9}

            MDSwitch:
                pos_hint: {"center_x": 0.5, "center_y": 0.9}
                active: False
                on_active: 
                    app.show_hide_work_timer()
            
            Widget:


    MDFloatingActionButtonSpeedDial:
        id: work_float
        data: {'Trake Break': 'coffee','Work Details': 'trending-up','End Session': 'cancel'}
        root_button_anim: True
        # hint_animation: True
        bg_hint_color: app.theme_cls.primary_light
        icon: "dog"
        callback: app.callback

<BreakPage@Screen>:
    name: "break"
    break_timer_text: "00:00:00"
    break_total_time: 0

    BoxLayout:
        orientation: "vertical"

        Widget:

        MDLabel:
            id: break_timer
            text: root.break_timer_text
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        BoxLayout:
            orientation: "horizontal"

            Widget:

            MDLabel:
                text: "Hide/Show Timer"
                pos_hint: {"center_x": 0.5, "center_y": 0.9}

            MDSwitch:
                pos_hint: {"center_x": 0.5, "center_y": 0.9}
                active: False
                on_active: 
                    app.show_hide_break_timer()
            
            Widget:


    MDFloatingActionButtonSpeedDial:
        id: break_float
        data: {'Back to Work': 'coffee','Work Details': 'trending-up','End Session': 'cancel'}
        root_button_anim: True
        # hint_animation: True
        bg_hint_color: app.theme_cls.primary_light
        icon: "dog"
        callback: app.callback

